      "authLevel": "anonymous",
      "name": "info",
      "type": "httpTrigger",
      "direction": "in",
      "methods": [
        "POST"
      ]
    },
    {
      "text": "{Text}",
      "voiceType": "{VoiceType}",
      "locale": "{Locale}",
      "blobContainerName": "{BlobContainerName}",
